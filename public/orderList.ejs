{%- include('partials/header') -%}

    <!-- content start -->
    <div class="pb-5">
        <div class="d-flex flex-column justify-content-center mx-auto pt-5 col-9">
            <div class="alert alert-warning text-center p-1">
                <h1>{%= user?.username %}'s Orders</h1>
            </div>
            {% for (let order of orders) { %}
            <div class="card m-2 shadow p-2">
                <div class="row g-0 d-flex justify-content-between">
                    <div class="col-md-1 d-flex align-items-center">
                        {% if (order.pizzaId?.image) { %} 
                        <img src="{%= order.pizzaId.image %}" style=" border-radius: 50%; width: 60px; height: 60px"> 
                        {% } %} 
                    </div>
                    <div class="col-md-6 d-flex justify-content-start flex-fill">
                        <div class="card-body">
                            <p class="card-title">
                                <label>üçï Pizza: <strong> {%= order.pizzaId.name %} </strong></label>
                                <label>üçï Size: <strong> {%= order.size %} </strong></label>
                                <label>üçï Quantitiy: <strong> {%= order.quantity %} </strong></label>
                                <label>üçï Total: {%= order.price %} x {%= order.quantity %} = <strong> {%= order.totalPrice %} </strong></label>
                            </p>
                        </div>
                    </div>
                    <!-- admin-area-start -->
                    <div class="col-md-3 d-flex align-items-center rounded">
                        <a href="/orders/654d58ee9acdcd3619b6c8db"> <button
                                class="btn btn-sm btn-info me-1">Detail</button></a>
                        <a href="/orders/654d58ee9acdcd3619b6c8db/update"> <button
                                class="btn btn-sm btn-warning me-1">Update</button></a>
                    </div> <!-- admin-area-end -->
                </div>
            </div>
            {% } %}
        </div><!-- totalRecords -->
        <p class="text-center">
            <span class="p-2 bg-dark text-white">Total 10 Records</span>
        </p>
    </div>
    <!-- content end -->

{%- include('partials/footer') -%}
